{% extends 'base.html.twig' %}

{% block title %}Arcadia - Services{% endblock %}

{% block body %}
<main class="services">
        <div class="add-service" data-show="admin" data-show="employee"><button id="btn-add-service"
                        class="button2">Ajouter
                        un service</button>
        </div>
        <section class="container-services">
                <div class="modal-add-service" id="modal-add-service">
                        <h3>Ajouter un service</h3>
                        <div class="main-form">
                                <form action="" method="post" class="form-add-service">
                                        <div class="form-group">
                                                <label for="image">Image</label>
                                                <input type="file" id="image" name="image" required>
                                        </div>
                                        <div class="form-group">
                                                <label for="name">Nom du service</label>
                                                <input type="text" id="name" name="name" required>
                                        </div>
                                        <div class="form-group">
                                                <label for="description">Description</label>
                                                <textarea name="description" id="description" cols="30" rows="10"
                                                        required></textarea>
                                        </div>
                                        <div class="form-btn">
                                                <button type="btn-container" class="btn-validate-form"
                                                        id="btn-validate-add-service">Ajouter</button>
                                                <button type="button" class="btn-cancel-form"
                                                        id="btn-cancel-add-service">Annuler</button>
                                        </div>
                                </form>
                        </div>
                </div>
                <div class="service" id=" 1">
                        <div class="modal-update-service" id="modal-update-service-1">
                                <h3>Modifier #id</h3>
